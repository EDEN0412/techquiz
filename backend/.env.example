# Django設定
DJANGO_SECRET_KEY=your_django_secret_key_here
DJANGO_DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Supabase接続情報
SUPABASE_URL=your_supabase_url_here
